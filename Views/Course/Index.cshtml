@model TimeTable.Models.CourseIndexViewModel

<h2>Courses</h2>

<div class="mb-3">
    <a href="@Url.Action("Create", "Course")" class="btn btn-success">Create New Course</a>
</div>

<!-- Search and Filter Form -->
<form method="get">
    <div class="form-row mb-3">
        <div class=" mb-2">
            <input type="text" name="name" placeholder="Search by Name" value="@Model.NameFilter" class="form-control" />
        </div>
        <div class=" mb-2">
            <select name="semester" class="form-control">
                <option value="">Select Semester</option>
                <option value="1">Semester 1</option>
                <option value="2">Semester 2</option>
                <!-- Add more semester options if needed -->
            </select>
        </div>
        <div class=" mb-2">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </div>
</form>

<!-- Course List Table -->
<table class="table table-bordered mt-4">
    <thead class="thead-dark">
        <tr>
            <th>Course Code</th>
            <th>Name</th>
            <th>Major</th>
            <th>Faculty</th>
            <th>Semester</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.CourseCode</td>
                <td>@course.Name</td>
                <td>@course.Major.Name</td>
                <td>@course.Faculty.Name</td>
                <td>@course.Semester</td>
                <td>
                    <!-- Edit Button -->
                    <a href="@Url.Action("Edit", "Course", new { id = course.Id })" class="btn btn-warning btn-sm">Edit</a>

                    <!-- Delete Button -->
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteCourseModal" data-course-id="@course.Id">
                        Delete
                    </button>

                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Controls -->
<div class="d-flex justify-content-between align-items-center mt-4">
    <div>
        <p>Page @Model.CurrentPage of @Model.TotalPages</p>
    </div>

    <div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <!-- First Page Button -->
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = 1, limit = Model.PageSize, name = Model.NameFilter, semester = Model.SemesterFilter })">First</a>
                </li>

                <!-- Previous Page Button -->
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1, limit = Model.PageSize, name = Model.NameFilter, semester = Model.SemesterFilter })">Previous</a>
                </li>

                <!-- Next Page Button -->
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1, limit = Model.PageSize, name = Model.NameFilter, semester = Model.SemesterFilter })">Next</a>
                </li>

                <!-- Last Page Button -->
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.TotalPages, limit = Model.PageSize, name = Model.NameFilter, semester = Model.SemesterFilter })">Last</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<!-- Delete Course Modal -->
<div class="modal fade" id="deleteTimetableModal" tabindex="-1" aria-labelledby="deleteTimetableModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteTimetableModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this timetable entry?</p>
            </div>
            <div class="modal-footer">
                <!-- Form to post data -->
                <form id="deleteTimetableForm" method="post" asp-action="Delete">
                    <input type="hidden" id="timetableId" name="timetableId" value="" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript to handle modal data -->
<script>
    document.getElementById('deleteTimetableModal').addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget; // Button that triggered the modal
        var timetableId = button.getAttribute('data-timetable-id'); // Extract timetable ID from data-* attributes

        var modal = this;
        modal.querySelector('#timetableId').value = timetableId; // Set the timetableId in the hidden input field
    });
</script>



