@{
    ViewData["Title"] = "Time Table";
}

<h1>@ViewData["Title"]</h1>

<!-- Filter Form -->
<form method="get" asp-controller="TimeTable" asp-action="Index">
    <div>
        <label for="year">Year:</label>
        <input type="number" id="year" name="year" class="form-control" />
    </div>
    <div>
        <label for="dayOfWeek">Day of Week:</label>
        <input type="text" id="dayOfWeek" name="dayOfWeek" class="form-control" />
    </div>
    <div>
        <label for="semester">Semester:</label>
        <input type="number" id="semester" name="semester" class="form-control" />
    </div>
    <div>
        <label for="section">Section:</label>
        <input type="text" id="section" name="section" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Apply Filters</button>
</form>

<h2>Timetable Entries</h2>

<!-- Timetable Table -->
<table class="table">
    <thead>
        <tr>
            <th>Course Code</th>
            <th>Course Name</th>
            <th>Classroom</th>
            <th>Day of Week</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Year</th>
            <th>Semester</th>
            <th>Section</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var timetable in Model)
        {
            <tr>
                <td>@timetable.Course.CourseCode</td>
                <td>@timetable.Course.Name</td>
                <td>@timetable.Classroom.Name</td>
                <td>@timetable.DayOfWeek</td>
                <td>@timetable.StartTime.ToString(@"hh\:mm")</td>
                <td>@timetable.EndTime.ToString(@"hh\:mm")</td>
                <td>@timetable.Year</td>
                <td>@timetable.Semester</td>
                <td>@timetable.Section</td>
                <td>
                    <!-- Edit Button -->
                    <a href="@Url.Action("Edit", "TimeTable", new { id = timetable.Id })" class="btn btn-warning btn-sm">Edit</a>

                    <!-- Delete Button (Trigger Modal) -->
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteTimetableModal" data-timetable-id="@timetable.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal for Deleting Timetable -->
<div class="modal fade" id="deleteTimetableModal" tabindex="-1" aria-labelledby="deleteTimetableModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteTimetableModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this timetable entry?</p>
            </div>
            <div class="modal-footer">
                <!-- Form to Post Data -->
                <form id="deleteTimetableForm" method="post" asp-action="Delete">
                    <input type="hidden" id="timetableId" name="timetableId" value="" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript to Handle Modal Data -->
<script>
    document.getElementById('deleteTimetableModal').addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget; // Button that triggered the modal
        var timetableId = button.getAttribute('data-timetable-id'); // Extract timetable ID from data-* attributes

        var modal = this;
        modal.querySelector('#timetableId').value = timetableId; // Set the timetableId in the hidden input field
    });
</script>
