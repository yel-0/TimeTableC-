@model TimeTable.ViewModels.UserIndexViewModel

<div class="container">
    <h1>Users</h1>

    <!-- Filter Form -->
    <form method="get">
        <div class="row">
            <div class="col-md-3">
                <input type="text" class="form-control" name="name" value="@Model.NameFilter" placeholder="Search by Name" />
            </div>
            <div class="col-md-3">
                <select name="role" class="form-select">
                    <option value="">All Roles</option>
                    <option value="Admin">Admin</option>
                    <option value="User" >User</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

    <!-- User List -->
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                <a class="page-link" href="?page=1&name=@Model.NameFilter&role=@Model.RoleFilter">First</a>
            </li>
            <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                <a class="page-link" href="?page=@(Model.Page - 1)&name=@Model.NameFilter&role=@Model.RoleFilter">Previous</a>
            </li>
            <li class="page-item @(Model.Page == Model.TotalCount / Model.Limit ? "disabled" : "")">
                <a class="page-link" href="?page=@(Model.Page + 1)&name=@Model.NameFilter&role=@Model.RoleFilter">Next</a>
            </li>
            <li class="page-item @(Model.Page == Model.TotalCount / Model.Limit ? "disabled" : "")">
                <a class="page-link" href="?page=@(Model.TotalCount / Model.Limit)&name=@Model.NameFilter&role=@Model.RoleFilter">Last</a>
            </li>
        </ul>
    </nav>
</div>
