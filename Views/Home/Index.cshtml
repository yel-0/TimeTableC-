@{
    ViewData["Title"] = "Home";
}

<h1>@ViewData["Title"]</h1>
<style>
    /* General Styling for Container */
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Custom Select Container */
    .custom-select-container {
        position: relative;
    }

    /* Custom Dropdown Styling */
    .custom-dropdown {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        border: 1px solid #ccc;
        border-radius: 4px;
        max-height: 200px;
        overflow-y: auto;
        background-color: white;
        z-index: 1000;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
    }

    /* Dropdown Items */
    .custom-dropdown-item {
        padding: 8px;
        cursor: pointer;
        font-size: 14px;
    }

        /* Hover Effect on Dropdown Items */
        .custom-dropdown-item:hover {
            background-color: #f1f1f1;
            color: #007bff;
        }

    /* Highlighted Item */
    .highlight {
        background-color: #dcdcdc;
    }

    /* Dropdown Lists Styling */
    #courseList, #classroomList, #majorList, #facultyList {
        padding: 0;
        margin: 0;
        list-style-type: none;
    }

    /* Search Input Styling */
    input[type="text"], input[type="time"], select {
        padding: 10px;
        font-size: 14px;
        border-radius: 4px;
        border: 1px solid #ccc;
        width: 100%;
        box-sizing: border-box;
    }

        /* Adjustments for Input Field Hover */
        input[type="text"]:hover, input[type="time"]:hover, select:hover {
            border-color: #007bff;
        }

        /* Adjustments for Input Focus */
        input[type="text"]:focus, input[type="time"]:focus, select:focus {
            border-color: #007bff;
            outline: none;
        }

    /* Row Spacing Between Fields */
    .row {
        margin-bottom: 1rem;
    }

    /* Text Input Field */
    .form-control {
        border-radius: 5px;
        padding: 10px;
    }

    }
</style>




<!-- Filter Form -->
<form method="get"  asp-action="Index">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4 mb-3">
                <label for="year">Year:</label>
                <input type="number" id="year" name="year" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label for="dayOfWeek">Day of Week:</label>
                <input type="text" id="dayOfWeek" name="dayOfWeek" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label for="semester">Semester:</label>
                <input type="number" id="semester" name="semester" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="section">Section:</label>
                <input type="text" id="section" name="section" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <div class="custom-select-container">
                    <label for="majorSearch">Major:</label>
                    <input type="text" id="majorSearch" name="MajorName" class="form-control" placeholder="Search Major" autocomplete="off" />
                    <input type="hidden" id="majorId" name="MajorId">
                    <div id="majorDropdown" class="custom-dropdown">
                        <ul id="majorList"></ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="custom-select-container">
                    <label for="facultySearch">Faculty:</label>
                    <input type="text" id="facultySearch" name="FacultyName" class="form-control" placeholder="Search Faculty" autocomplete="off" />
                    <input type="hidden" id="facultyId" name="FacultyId">
                    <div id="facultyDropdown" class="custom-dropdown">
                        <ul id="facultyList"></ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Apply Filters</button>
        </div>
    </div>
</form>



<h2>Timetable Entries</h2>

<!-- Timetable Table -->
<table class="table">
    <thead>
        <tr>
            <th>Course Code</th>
            <th>Course Name</th>
            <th>Classroom</th>
            <th>Day of Week</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Year</th>
            <th>Semester</th>
            <th>Section</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var timetable in Model.Timetables)
        {
            <tr>
                <td>@timetable.Course.CourseCode</td>
                <td>@timetable.Course.Name</td>
                <td>@timetable.Classroom.Name</td>
                <td>@timetable.DayOfWeek</td>
                <td>@timetable.StartTime.ToString(@"hh\:mm")</td>
                <td>@timetable.EndTime.ToString(@"hh\:mm")</td>
                <td>@timetable.Year</td>
                <td>@timetable.Semester</td>
                <td>@timetable.Section</td>
             
            </tr>
        }

    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", "Timetable", new { page = 1 })">First</a>
        </li>
        <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", "Timetable", new { page = Model.Page - 1 })">Previous</a>
        </li>
        <li class="page-item @(Model.Page == (Model.TotalCount + Model.Limit - 1) / Model.Limit ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", "Timetable", new { page = Model.Page + 1 })">Next</a>
        </li>
        <li class="page-item @(Model.Page == (Model.TotalCount + Model.Limit - 1) / Model.Limit ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", "Timetable", new { page = (Model.TotalCount + Model.Limit - 1) / Model.Limit })">Last</a>
        </li>
    </ul>
</nav>


<!-- Modal for Deleting Timetable -->
<div class="modal fade" id="deleteTimetableModal" tabindex="-1" aria-labelledby="deleteTimetableModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteTimetableModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this timetable entry?</p>
            </div>
            <div class="modal-footer">
                <form id="deleteTimetableForm" method="post" asp-action="Delete">
                    <input type="hidden" id="timetableId" name="timetableId" value="" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('deleteTimetableModal').addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var timetableId = button.getAttribute('data-timetable-id');

        var modal = this;
        modal.querySelector('#timetableId').value = timetableId;
    });
</script>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
        $(document).ready(function () {
        const limit = 5;

        // Live search for Course
        $("#courseSearch").on("input", function () {
            var searchTerm = $(this).val();
            if (searchTerm.length >= 2) {
                searchItems('course', searchTerm, 1);
            } else {
                $("#courseDropdown").hide();
            }
        });

        // Live search for Classroom
        $("#classroomSearch").on("input", function () {
            var searchTerm = $(this).val();
            if (searchTerm.length >= 2) {
                searchItems('classroom', searchTerm, 1);
            } else {
                $("#classroomDropdown").hide();
            }
        });

        // Live search for Majors
        $("#majorSearch").on("input", function () {
            var searchTerm = $(this).val();
            if (searchTerm.length >= 2) {
                searchItems('major', searchTerm, 1);
            } else {
                $("#majorDropdown").hide();
            }
        });

        // Live search for Faculties
        $("#facultySearch").on("input", function () {
            var searchTerm = $(this).val();
            console.log(searchTerm);
            if (searchTerm.length >= 2) {
                searchItems('faculty', searchTerm, 1);
            } else {
                $("#facultyDropdown").hide();
            }
        });

          function searchItems(type, term, page) {
        $.ajax({
            url: '/TimeTable/GetDropDownData',
            type: 'GET',
            data: { [`${type}Name`]: term, [`${type}Page`]: page, limit: limit },
            success: function (response) {
                let listId = `#${type}List`;
                let dropdownId = `#${type}Dropdown`;


                $(listId).empty();

                // Check if the type corresponds to a valid property in the response
                let items = response[type + 's'] || response.faculties;  // Fallback to faculties if type is not found


                if (Array.isArray(items) && items.length > 0) {
                    items.forEach(item => {
                        $(listId).append(`<li class="custom-dropdown-item" data-id="${item.id}">${item.name}</li>`);
                    });
                } else {
                    $(listId).append('<li class="custom-dropdown-item">No results found</li>');
                }

                $(dropdownId).show();
            },
            error: function (xhr, status, error) {
                console.error("Error fetching data:", error);
            }
        });
    }





        // Handle selecting an item from the dropdown
        $(document).on('click', '.custom-dropdown-item', function () {
            var itemId = $(this).data('id');
            var itemName = $(this).text();
            var inputId = $(this).closest('.custom-select-container').find('input').first();
            var hiddenInputId = $(this).closest('.custom-select-container').find('input[type="hidden"]');

            inputId.val(itemName);
            hiddenInputId.val(itemId);

            $(this).closest('.custom-dropdown').hide();
        });
    });


</script>